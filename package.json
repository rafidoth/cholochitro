{
  "name": "cholochitro",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts | npx pino-pretty",
    "build": "tsc",
    "start": "node dist/index.js",
    "docker": "docker compose -f docker-compose.yaml up",
    "database": "docker exec -it cholochitro-db-1 psql -U postgres",
    "app":"docker exec -it cholochitro-app-1 /bin/sh",
    "migrate": "node-pg-migrate",
    "migrate:create": "pnpm migrate create -j ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:docker": "docker compose exec app pnpm test",
    "test:ci": "docker compose run --rm app pnpm test",
    "reset":"docker compose down -v && docker compose up --build",
    "k6:seed": "node k6/data/seed-data.js",
    "k6:health": "k6 run k6/scripts/health.js",
    "k6:auth": "k6 run k6/scripts/auth-flow.js",
    "k6:read": "k6 run k6/scripts/read-heavy.js",
    "k6:race": "k6 run k6/scripts/seat-race.js",
    "k6:journey": "k6 run k6/scripts/full-journey.js",
    "k6:cleanup": "node -e \"fetch('http://localhost:4001/api/v1/auth/login',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({email:'admin1@cholochitro.com',password:'admin'})}).then(r=>r.json()).then(d=>console.log('Cleanup requires manual DB access or API extension'))\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.28.2",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/cors": "^2.8.19",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "node-pg-migrate": "^8.0.4",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.1",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.18.0",
    "pino": "^10.3.0",
    "zod": "^4.3.6"
  }
}
